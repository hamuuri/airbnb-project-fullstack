<div class="login-bg">
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="card mx-auto text-center mt-5" style="width: 25rem;">
              <div class="center text-center mt-5">
                <img
                  src="/images/logo-airbnb.png"
                  class="airbnb-logo"
                  alt="Airbnb"
                />
              </div>
              <div class="card-body text-start">
                <form action="/auth/signup" method="post">
                  <div class="mb-1">
                    <label class="form-label mb-0" >Your full name</label>
                    <input type="text" name="name" class="form-control" />
                    <label class="form-label mb-0">Profile Picture</label>
                    <input
                      type="text"
											name="avatar"
                      class="form-control"
                      placeholder="http:/..."
                    />
                    <label class="form-label mb-0">Email</label>
                    <input type="email" name="email" class="form-control" />
                    <label class="form-label mb-0 mt-3">Password</label>
                    <input type="password" name="password" class="form-control" />
                    <button class="btn btn-success mt-3">
                      <small>Signup</small>
                    </button>
                    <div class="mt-3">
                      <small><strong>Already have an account?</strong></small>
                      <a href="login.html"><small>Login</small></a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
